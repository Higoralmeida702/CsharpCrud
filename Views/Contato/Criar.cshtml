@{
    ViewData["Title"] = "Criar Contato";
}

<div class="text-center">
	<h1 class="display-4">Criar novo contato</h1>
</div>

<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Insira o nome do contato">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" placeholder="Insira o email">
    </div>
    <div class="form-group">
        <label for="email">Celular</label>
        <input type="number" class="form-control" placeholder="Insira o telefone do contato">
    </div>
    
    <button type="submit" class="btn btn-primary my-3">Adicionar</button>
    <a role="button" asp-controller="Contato" asp-action="Index" class="btn btn-primary">Voltar</a>
</form>