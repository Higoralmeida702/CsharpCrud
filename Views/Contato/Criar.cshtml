@model Cliente
@{
    ViewData["Title"] = "Criar Contato";
}

<div class="text-center">
    <h1 class="display-4">Criar novo contato</h1>
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="nome" placeholder="Insira o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Insira o email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="telefone">Celular</label>
        <input type="text" asp-for="Telefone" class="form-control" id="telefone" placeholder="Insira o telefone do contato">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>

    <button type="submit" class="btn btn-primary my-3">Adicionar</button>
    <a role="button" asp-controller="Contato" asp-action="Index" class="btn btn-primary">Voltar</a>
</form>
